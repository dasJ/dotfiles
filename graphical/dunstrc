[global]
	# Position and size
	width = 400
	offset = 5x27
	follow = keyboard
	padding = 10
	horizontal_padding = 10

	indicate_hidden = yes
	separator_color = frame

	# Contents
	font = Noto Sans Regular 10
	line_height = 1
	markup = full
	format = "<span size='small'>%a %p</span>\n<b>%s</b>\n%b"
	alignment = left
	show_indicators = yes
	show_age_threshold = 30
	icon_position = left
	max_icon_size = 64
	icon_path = /run/current-system/sw/share/icons/Adwaita/32x32/status/:/run/current-system/sw/share/icons/Adwaita/32x32/devices/

	# Frame
	frame_width = 1
	frame_color = "#444444"

	# History
	sticky_history = yes
	history_length = 40

	# External programs
	dmenu = rofi -dmenu -p dunst>
	browser = firefox

[shortcuts]
	close = mod4+odiaeresis
	history = mod4+adiaeresis
	context = mod4+udiaeresis

[urgency_low]
	foreground = "#888888"
	background = "#222222"
	timeout = 5

[urgency_normal]
	foreground = "#888888"
	background = "#222222"
	timeout = 5

[urgency_critical]
