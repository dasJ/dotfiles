[core]
	editor = vim
[push]
	default = current
[pull]
	ff = only
[alias]
	last = log -1 HEAD
	unstage = reset HEAD --
	graph = log --graph --full-history --all --color --decorate --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
[include]
	path = ~/.dotfiles/local/gitcustom
[color]
	ui = auto
[help]
	autocorrect = -1
[diff]
	tool = vimdiff
	renames = copies
[grep]
	lineNumber = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
	log = true
[mergetool]
	prompt = false
	keepBackup = false
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@git.helsinki.tools:"]
	insteadOf = https://git.helsinki.tools/
[commit]
	gpgsign = true
[status]
	showStash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
